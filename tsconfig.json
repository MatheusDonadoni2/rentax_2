{
  "compilerOptions": {
    "target": "es2016",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@modules/*": [
        "./src/modules/*"
      ],
      "@config/*": [
        "./src/config/*"
      ],
      "@shared/*": [
        "./src/shared/*"
      ],
      "@errors/*": [
        "src/shared/errors/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ]
    },
    "typeRoots": [
      "src/@types",
      "node_modules/@types"
    ],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}
